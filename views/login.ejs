<% include ./partials/header %>
<title>ClassStats</title>
</head>

<body>
    <% include ./partials/navbar %>
    <div class="container">
        <div class="row justify-content-center mt-5 mb-4">
            <div class="col-xs-12 d-md-none loginLogoMobile">
                <img class="img-responsive " src="/Assets/logo_regular.svg" />
            </div>
            <div class="col-sm-12 d-none d-md-block loginLogo">
                <img src="/Assets/logo_regular.svg" alt="">
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-10 col-lg-6 col-md-7 loginBlurb">
                <p>
                    ClassStats is a course review website created for students, by students. Made to assist during the
                    course registration process through the evaluation of several key statistics.
                </p>
            </div>
        </div>
        <% if(message.length > 0) {%>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>
        <div class="row justify-content-center mb-5">
            <div class="col-10 col-lg-4 col-md-6">
                <h4 class="loginTitles">Login</h4>
                <!-- <% if(message.length > 0) {%>
                <div class="alert alert-danger"><%= message %></div>
                <% } %> -->
                <form action="/login" method="POST">
                    <div class="form-group">
                        <!-- <label for="exampleInputEmail1">Email address</label> -->
                        <input type="email" class="formInputs" id="exampleInputEmail1" aria-describedby="emailHelp"
                            placeholder="email" name="email">
                        <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                            else.</small> -->
                    </div>
                    <div class="form-group">
                        <!-- <label for="exampleInputPassword1">Password</label> -->
                        <input type="password" class="formInputs" id="exampleInputPassword1" placeholder="password"
                            name="password">
                    </div>
                    <!-- <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Check me out</label>
                    </div> -->
                    <button type="submit" class="btn formSubmit">LOGIN</button>
                </form>
            </div>
        </div>

        <div class="row justify-content-center mb-5">
            <div class="col-10 col-lg-4 col-md-6">
                <h4 class="loginTitles">Sign Up Now!</h4>
                <!-- <% if(message.length > 0) {%>
                <div class="alert alert-danger"><%= message %></div>
                <% } %> -->
                <form action="/signup" method="POST">
                    <div class="form-group">
                        <input type="text" class="formInputName fname" id="exampleInputEmail1" placeholder="first name"
                            name="fName">
                        <input type="text" class="formInputName lname" id="exampleInputEmail1" placeholder="last name"
                            name="lName">
                    </div>
                    <div class="form-group">
                        <input type="email" class="formInputs" id="exampleInputEmail1" aria-describedby="emailHelp"
                            placeholder="school email" name="email">
                    </div>
                    <div class="form-group">
                        <input type="password" class="formInputs" id="exampleInputPassword1" placeholder="password"
                            name="password">
                    </div>
                    <button type="submit" class="btn formSubmit">SIGN UP</button>
                </form>
            </div>
        </div>
    </div>
</body>

</html>